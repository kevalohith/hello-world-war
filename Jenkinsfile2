pipeline {
    agent any

    parameters {
        string(name: 'LABEL_NAME', defaultValue: 'agent', description: 'Node label where the playbook should run')
    }

    stages {
        stage('Get Builder Node IP') {
            agent { label params.LABEL_NAME }
            steps {
                script {
                    env.NODE_IP = sh(script: "hostname -I | awk '{print \$1}'", returnStdout: true).trim()
                    echo "Builder Node IP: ${env.NODE_IP}"
                }
            }
        }

        stage('Run Ansible Playbook on Node') {
            agent { label params.LABEL_NAME }
            steps {
                script {
                    echo "Running Ansible Playbook on ${env.NODE_IP}"
                    sh "ANSIBLE_HOST_KEY_CHECKING=False ansible-playbook -i ${env.NODE_IP}, -u ubuntu --private-key=/home/ubuntu/.ssh/id_rsa playbook.yml"
                }
            }
        }
    }
}
