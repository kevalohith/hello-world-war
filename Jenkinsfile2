pipeline {
    agent { label 'ansible' }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/kevalohith/hello-world-war.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sh 'ansible-playbook -i inventory.ini playbook.yml --extra-vars "target_ip=3.88.226.118"'
            }
        }
    }
}
