pipeline {
    agent { label 'ansible' }  

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/kevalohith/hello-world-war.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                script {
                    ansiblePlaybook(
                        playbook: 'playbook.yml',
                        inventory: 'inventory.ini',
                        credentialsId: 'ansible-ssh-key',
                        extraVars: [
                            target_ip: '3.88.226.118'
                        ]
                    )
                }
            }
        }
    }
}
