pipeline {
    agent any

    environment {
        NODE_IP = '' // Initialize NODE_IP to prevent undefined errors
    }

    stages {
        stage('Checkout SCM') {
            steps {
                git url: 'https://github.com/kevalohith/hello-world-war.git', branch: 'master'
            }
        }

        stage('Get Builder Node IP') {
            steps {
                script {
                    env.NODE_IP = sh(script: "hostname -I | awk '{print \$1}'", returnStdout: true).trim()
                    echo "Builder Node IP: ${env.NODE_IP}"
                }
            }
        }

        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/kevalohith/hello-world-war.git', branch: 'master'
            }
        }

        stage('Run Ansible Playbook on Builder Node') {
            steps {
                script {
                    echo "Running Ansible Playbook on ${env.NODE_IP}"
                    
                    // Example Ansible command (modify according to your setup)
                    sh """
                        ansible-playbook -i ${env.NODE_IP}, -u ubuntu /path/to/your/playbook.yml
                    """
                }
            }
        }
    }

    post {
        failure {
            echo 'Build failed!'
        }
        success {
            echo 'Build succeeded!'
        }
    }
}
