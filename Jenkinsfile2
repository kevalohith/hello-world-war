pipeline {
    agent any
    stages {
        stage('Get Builder Node IP') {
            steps {
                script {
                    // Capture the IP address and store it in a variable
                    nodeIP = sh(script: "hostname -I | awk '{print \$1}'", returnStdout: true).trim()
                    echo "Builder Node IP: ${nodeIP}"
                }
            }
        }
        
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }
        
        stage('Run Ansible Playbook on Builder Node') {
            steps {
                script {
                    if (nodeIP) {
                        echo "Running Ansible Playbook on ${nodeIP}"
                        sh "ansible-playbook -i ${nodeIP}, playbook.yml"
                    } else {
                        error "Failed to retrieve node IP"
                    }
                }
            }
        }
    }
}
