pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/kevalohith/hello-world-war.git'
            }
        }

        stage('Get Builder Node IP') {
            steps {
                script {
                    env.NODE_IP = sh(script: "hostname -I | awk '{print \\$1}'", returnStdout: true).trim()
                    echo "Builder Node IP: ${env.NODE_IP}"
                }
            }
        }

        stage('Run Ansible Playbook on Builder Node') {
            steps {
                script {
                    echo "Running Ansible Playbook on ${env.NODE_IP}"
                    sh "ansible-playbook -i ${env.NODE_IP}, -u ubuntu /home/ubuntu/jenkins/workspace/playbook/playbook.yml"
                }
            }
        }
    }
}
