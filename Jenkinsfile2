pipeline {
    agent { label params.NODE_LABEL }

    parameters {
        string(name: 'NODE_LABEL', defaultValue: 'builder-node', description: 'Enter the Builder Node label')
    }

    stages {
        stage('Get Builder Node IP') {
            steps {
                script {
                    def ipAddress = sh(script: 'hostname -I | awk \'{print $1}\'', returnStdout: true).trim()
                    echo "Builder Node IP Address: ${nodeIP}"
                    env.NODE_IP = nodeIP
                }
            }
        }

        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/kevalohith/hello-world-war.git'
            }
        }

        stage('Run Ansible Playbook on Builder Node') {
            steps {
                sh """
                    ansible-playbook -i '${NODE_IP},' -e 'target_ip=${NODE_IP}' builder-node.yml --private-key ~/.ssh/id_rsa
                """
            }
        }
    }
}
